{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure & Build",
      "type": "shell",
      "command": "./scripts/rebuild.sh",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run unit tests",
      "type": "shell",
      "command": "./build/unit_tests",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
